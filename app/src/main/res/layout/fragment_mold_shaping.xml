<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="@color/home_bg"
  android:orientation="vertical">


  <ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical">
      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/bg_recyclerview"
        android:orientation="vertical">
        <com.example.ngockhanh.dongtiencatalog.ui.textview.UTMBryantTextView
          android:textStyle="bold"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="15dp"
          android:layout_marginBottom="3dp"
          android:layout_marginLeft="15dp"
          android:text="Sản phẩm mới"
          android:textColor="#FF0000"
          android:textSize="18sp"/>
        <View
          android:layout_width="fill_parent"
          android:layout_height="1dip"
          android:layout_marginLeft="15dp"
          android:background="#EFEFEF"/>

        <com.yarolegovich.discretescrollview.DiscreteScrollView
          android:id="@+id/rcv_new_product"
          android:layout_width="match_parent"
          android:layout_height="125dp"/>
      </LinearLayout>


      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/bg_recyclerview"
        android:orientation="vertical">
        <com.example.ngockhanh.dongtiencatalog.ui.textview.UTMBryantTextView
          android:textStyle="bold"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="15dp"
          android:layout_marginBottom="3dp"
          android:layout_marginLeft="15dp"
          android:text="Mẫu Thường niên"
          android:textColor="#000"
          android:textSize="18sp"/>
        <View
          android:layout_width="fill_parent"
          android:layout_height="1dip"
          android:layout_marginLeft="15dp"
          android:background="#EFEFEF"/>

        <com.yarolegovich.discretescrollview.DiscreteScrollView
          android:id="@+id/rcv_annual_sample"
          android:layout_width="match_parent"
          android:layout_height="125dp"/>
      </LinearLayout>

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/bg_recyclerview"
        android:orientation="vertical">
        <com.example.ngockhanh.dongtiencatalog.ui.textview.UTMBryantTextView
          android:textStyle="bold"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="15dp"
          android:layout_marginBottom="3dp"
          android:layout_marginLeft="15dp"
          android:text="Mẫu Đặt Mặt Bánh"
          android:textColor="#000"
          android:textSize="18sp"/>
        <View
          android:layout_width="fill_parent"
          android:layout_height="1dip"
          android:layout_marginLeft="15dp"
          android:background="#EFEFEF"/>

        <com.yarolegovich.discretescrollview.DiscreteScrollView
          android:id="@+id/rcv_sample_cake_face"
          android:layout_width="match_parent"
          android:layout_height="125dp"/>
      </LinearLayout>
    </LinearLayout>
  </ScrollView>


</LinearLayout>
